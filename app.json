{
  "expo": {
    "name": "Pastelería App",
    "slug": "pasteleria-app",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "pasteleria-app",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pasteleria.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Esta app puede usar la cámara para escanear códigos QR.",
        "NSMicrophoneUsageDescription": "Esta app puede usar el micrófono para notificaciones.",
        "NSUserNotificationsUsageDescription": "Esta app necesita enviar notificaciones push para mantenerlo informado sobre nuevos ingredientes y postres.",
        "UIBackgroundModes": ["remote-notification", "background-processing"],
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSExceptionDomains": {
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSExceptionMinimumTLSVersion": "1.0",
              "NSExceptionRequiresForwardSecrecy": false
            }
          }
        }
      },
      "config": {
        "usesNonExemptEncryption": false
      },
      "runtimeVersion": {
        "policy": "appVersion"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.pasteleria.app",
      "versionCode": 2,
      "permissions": [
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE"
      ],
      "useNextNotificationsApi": true,
      "runtimeVersion": "1.1.0"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "notification": {
      "icon": "./assets/icon.png",
      "color": "#FF6B6B",
      "androidMode": "default",
      "androidCollapsedTitle": "Pastelería Updates"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#FF6B6B",
          "defaultChannel": "default"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "5ca808a7-4102-42e5-aae3-cf083ed6e243"
      }
    },
    "updates": {
      "url": "https://u.expo.dev/5ca808a7-4102-42e5-aae3-cf083ed6e243"
    }
  }
}
